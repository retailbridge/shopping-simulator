{
  "type": "panel",
  "version": "1.0",
  "background": "rgba(15, 15, 15, 0.75)",
  "backdropBlur": 18,
  "padding": 40,
  "cornerRadius": 26,
  "children": [
    {
      "type": "column",
      "spacing": 28,
      "alignItems": "center",
      "children": [
        {
          "type": "text",
          "id": "onboardingTitle",
          "value": "XR Shopping Simulator",
          "fontSize": 54,
          "fontWeight": "800",
          "color": "#FFFFFF",
          "textAlign": "center",
          "lineHeight": 1.2
        },
        {
          "type": "text",
          "id": "onboardingSubtitle",
          "value": "Scan items to score points",
          "fontSize": 34,
          "fontWeight": "700",
          "color": "#FFB74D",
          "textAlign": "center",
          "lineHeight": 1.2
        },

        {
          "type": "text",
          "id": "onboardingBody",
          "value": "• Grab a product from the table\n• Move it over the glowing scanner pad\n• Hear the beep → your score increases\n• You have 60 seconds — scan as many items as possible!",
          "fontSize": 30,
          "fontWeight": "400",
          "color": "#E0E0E0",
          "textAlign": "left",
          "lineHeight": 1.35
        },

        {
          "type": "text",
          "id": "onboardingHint",
          "value": "Pro Tip: Watch the timer and scan quickly for a high score.",
          "fontSize": 26,
          "fontWeight": "500",
          "color": "#90CAF9",
          "textAlign": "center",
          "lineHeight": 1.3
        },

        {
          "type": "button",
          "id": "onboardingStartBtn",
          "background": "linear-gradient(90deg, #43A047, #66BB6A)",
          "padding": 26,
          "cornerRadius": 22,
          "children": [
            {
              "type": "text",
              "value": "Start Scanning",
              "fontSize": 38,
              "fontWeight": "800",
              "color": "#FFFFFF",
              "textAlign": "center"
            }
          ]
        }
      ]
    }
  ]
}
